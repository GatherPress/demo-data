{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "preferredVersions": {
    "php": "8.2",
    "wp": "latest"
  },
  "phpExtensionBundles": [
    "kitchen-sink"
  ],
  "features": {
    "networking": true
  },
  "landingPage": "https://playground.wordpress.net/wp-admin/edit.php",
  "steps": [
     {
      "step": "setSiteOptions",
      "options": {
        "blogname": "GatherPress",
        "blogdescription": "Powering Communities with WordPress.",
        "users_can_register": 1,
        "permalink_structure": "/%year%/%monthnum%/%postname%/"
      }
    },
    {
      "step": "runPHP",
      "code": "<?php require '/wordpress/wp-load.php'; $user_id = wp_create_user('editor', 'editorpass', 'editor@localhost.test'); (new WP_User($user_id))->set_role('editor');"
    },
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "url",
        "url": "https://github-proxy.com/proxy/?repo=carstingaxion/gatherpress-demo-data&branch=save-export-to-server"
      },
      "options": {
        "activate": false
      }
    },
    {
      "step": "mv",
      "fromPath": "/wordpress/wp-content/plugins/gatherpress-demo-data-save-export-to-server/blueprints",
      "toPath": "/wordpress/wp-content/blueprints"
    },
    {
      "step": "mv",
      "fromPath": "/wordpress/wp-content/plugins/gatherpress-demo-data-save-export-to-server/demo-data",
      "toPath": "/wordpress/wp-content/demo-data"
    },
    {
      "step": "mv",
      "fromPath": "/wordpress/wp-content/plugins/gatherpress-demo-data-save-export-to-server/uploads",
      "toPath": "/wordpress/wp-content/uploads"
    },
    {
      "step": "mv",
      "fromPath": "/wordpress/wp-content/plugins/gatherpress-demo-data-save-export-to-server/mu-plugins",
      "toPath": "/wordpress/wp-content/mu-plugins"
    },
    {
        "step": "importWxr",
        "file": {
            "resource": "url",
            "url": "https://raw.githubusercontent.com/carstingaxion/gatherpress-demo-data/main/GatherPress-demo-data-2024.xml"
        }
    }
  ]
}
